.container{
  font-size: 26rpx;
  background: #f2f2f2;
}
/*列表部分*/
.list-container{
  width: 100%;
}

.item{
  background: #fff;
  position: relative;
  transition: all 0.3s;
  width: 100%;
  left: 0;
  margin-bottom: 20rpx;
}

/*侧滑删除部分*/
.slide {
  left: -150rpx;
}
.item-left{
  border: 1rpx solid #7A7A7A;
  border-right: transparent;
  display: flex;
  z-index: 10;
}

.item-left-bottom{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 30rpx;
  color: #2c2c2c;
}

.item-right{
  width: 150rpx;
  color:#fff;
  position: absolute;
  right: -150rpx;
  top:0;
  background: red;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1;
}

.menu-img{
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
}
.menu-name{}
.menu-price{}

.add-btn{
  font-size: 30rpx;
  position: fixed;
  bottom: 0;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  width: 100%;
  z-index: 11;
}

/*弹框部分*/
/* components/custom-modal/custom-modal.wxss */

.mask {
  position: fixed;
  top: 0;
  left:0;
  right:0;
  bottom: 0;
  z-index: 100;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal__content {
  width: 600rpx;
  background: #fff;
  margin: auto 0;
  margin-top: 10%;
  border-radius: 10rpx;
  overflow: hidden;
  z-index: 101;
}

.modal__title {
  background: #3c3c3c;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
  margin-bottom: 30rpx;
}
.cancel {
  position: absolute;
  right: 30rpx;
  top: 0;
  bottom: 0;
  margin: auto 0;
  line-height: 60rpx;
  height: 46rpx;
}
.modal__info {
  padding: 20rpx;
  margin:0 auto;
  width:420rpx;
}

.commit-btn{
  margin: 20rpx;
}

.modal__bottom{
  margin-top: 30rpx;
  display: flex;
  border-top: 1rpx solid #3c3c3c;
}

.modal__bottom view{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  width: 50%;
  font-size: 26rpx;
}
.modal__bottom view:nth-of-type(2){
  background: #3c3c3c;
  color: #fff;
}


/*表单部分*/
.form-item{
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.form-item input{
  border: 1rpx solid #333;
  margin-left: 20rpx;
  padding: 10rpx;
}

/*上传图片部分*/
.uploader{
  display: flex;
  align-items: flex-start;
}

.uploader-image{
  width: 160rpx;
  height: 160rpx;
}

.gohome-icon{
  position: fixed;
  bottom: 120rpx;
  right:20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid #3c3c3c;
  z-index: 11;
  background: #fff;
}
