<!--index.wxml-->
<view class="container">
  <view bindtap="flash">刷新</view>
  <view wx:for="{{list}}" wx:key="{{index}}">
    <view class="item">
      <view>{{item.nickName}}点了{{item.name}}</view>
      <view>{{item.price}}元</view>
      <view wx:if="{{item.paid}}">已付款</view>
      <button wx:else class="common-btn"  bindtap="pay" id="{{item._id}}">付款</button>
    </view>
  </view>
</view>
