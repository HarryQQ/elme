
.btn-common{
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  border: 2rpx solid #2c2c2c;
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  bottom: 80rpx;
  right: 30rpx;
  border-radius: 50%;
  transition: all .3s linear 0s;
  box-shadow: 0 7rpx 18rpx 0 #2c2c2c;
}

.custom-btn-img{
  width: 50rpx;
  height: 50rpx;
}
